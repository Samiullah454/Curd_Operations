@model Curd_Operations.Context.Student_Details
@{
    ViewBag.Title = "Student";
}
<style>
    .error{
        color:red
    }
</style>

@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x=>x.Std_ID)
            <label>FirstName</label>
            @Html.ValidationMessageFor(x => x.Std_FName, "",new { @class = "error" })
            @Html.TextBoxFor(x => x.Std_FName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>LastName</label>
            @Html.ValidationMessageFor(x => x.Std_LName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Std_LName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Cnic (00000-0000000-0)</label>
            @Html.ValidationMessageFor(x => x.Std_Cnic, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Std_Cnic, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>DOB(YYYY-MM-DD)</label>
            @Html.TextBoxFor(x => x.Std_Dob, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(x => x.Std_Email, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Std_Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Phone No</label>
            @Html.ValidationMessageFor(x => x.Std_PhoneNo, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Std_PhoneNo, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Gender</label>
            @Html.TextBoxFor(x => x.Std_Gender, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Std_Address, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Grade</label>
            @Html.TextBoxFor(x => x.Std_Grade, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Cancel</button>

        </div>
    </div>

}
